@{
    ViewBag.Title = "我的";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    #logaccount {
        color: #ffffff !important;
    }
</style>

<div class="container">
    <input id="indextab" value="2" type="hidden" />

    @if (!Request.IsAuthenticated)
    {
        <!--未登录状态开始-->
        <div class="myhead">
            <div class="my_top">
                <div class="header_ricon2"><a onclick="ShowLogin();" href="javascript:void(0);"><i class="icon iconfont icon-alert"></i></a></div>
            </div>
            <dl>
                <dt onclick="ShowLogin();">
                    <img src="~/Content/img/ad6.png" />
                    <h3>注册/登录</h3>
                </dt>
            </dl>
        </div>
        <!--未登录状态结束-->
    }
    else
    {
        <div class="myhead">
            <div class="my_top">
                <div class="header_ricon2"><a href="Message"><i class="icon iconfont icon-alert"></i></a></div>
            </div>
            <dl>
                <dt>
                    <img onclick="myAccount();" src="@ZFX365.Com.Manager.Common.WebHelper.GetCookie("headimgurl")" />
                    <h3 id="logaccount" onclick="myAccount();">@FormsAuthentication.Decrypt(ZFX365.Com.Manager.Common.WebHelper.GetCookie("logaccount")).Name</h3>
                </dt>
            </dl>
        </div>
    }

    <div class="user_money">
        <a href="/order/">
            <dl>
                <dt id="intentionCount" class="colorhui">0</dt>
                <dd>意向房</dd>
            </dl>
        </a>
        <a href="MyCollect">
            <dl>
                <dt id="collectCount" class="colorhui">0</dt>
                <dd>我的收藏</dd>
            </dl>
        </a>
        <a href="MyContract">
            <dl style="border-right:0">
                <dt id="contractCount" class="colorhui">0</dt>
                <dd>租赁合同</dd>
            </dl>
        </a>
    </div>

    <div class="contact">
        <div class="contact_box">
            <ul>
                <a class="telbtn" onclick="CheckUserLogRedirect('/Account/MyDeposit');" href="javascript:void(0);" href="javascript:void(0);"><li><span> 交易保障金</span><em><b id="deposit">￥ 0 </b><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
                <a class="telbtn" onclick="CheckUserLogRedirect('/Account/MyCoupon');" href="javascript:void(0);"><li><span> 我的优惠券</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
            </ul>
        </div>
        <div class="contact_box">
            <ul>
                <a class="telbtn" onclick="CheckUserLogRedirect('/Account/LandlordCenter');" href="javascript:void(0);"><li><span> 我是房东</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>

            </ul>
        </div>
        
        <div class="contact_box">
            <ul>
                <a class="telbtn" onclick="CheckUserLogRedirect('/Account/FeedbackAdd');" href="javascript:void(0);"><li><span> 问题反馈</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
                <a class="telbtn" onclick="CheckUserLogRedirect('/Account/Feedback');" href="javascript:void(0);"><li><span> 帮助中心</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
                <a class="telbtn" href="tel:4001181189"><li><span> 联系客服</span><em>400 118 1189 <i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
            </ul>
        </div>
        <div class="contact_box">
            <ul>
                <a class="telbtn" href="/account/aboutus"><li><span> 关于指房向</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
            </ul>
        </div>
        @*<div class="contact_box">
                <ul>
                    <a class="telbtn" href="SetPassword"><li><span> 设置</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>
                </ul>
            </div>*@
    </div>
    <input id="hidDeposit" type="hidden" />

    <div class="btmline"></div>
    @Html.Partial("~/views/shared/_bottom.cshtml")
</div>

<script>

    $(function () {
        if (CheckUserLog()) {
            //加载用户相关数据
            try {
                $.ar({
                    url: globalKey.InterfaceDomain + 'api/Users/GetUserStatisticData?strUserId=' + $('#Uid').val()
                               , data: { strUserId: $('#Uid').val() }
                               , success: function (res) {
                                   $("#intentionCount").html(res.data.intentionCount);
                                   if (res.data.intentionCount > 0) {
                                       $("#intentionCount").removeClass("colorhui");
                                   }
                                   $("#contractCount").html(res.data.contractCount);
                                   if (res.data.contractCount > 0) {
                                       $("#contractCount").removeClass("colorhui");
                                   }
                                   $("#collectCount").html(res.data.collectCount);
                                   if (res.data.collectCount > 0) {
                                       $("#collectCount").removeClass("colorhui");
                                   }

                                   $("#deposit").html('￥ ' + res.data.deposit);
                                   $("#hidDeposit").val(res.data.deposit);
                                   if (res.data.unReadMsgs > 0) {
                                       var unread = res.data.unReadMsgs;
                                       if (unread > 9) {
                                           unread = 9;
                                       }
                                       $(".header_ricon2 a i").append("<em style='width: 11px;  height: 11px; border-radius: 50%;  line-height: 14px; color: #fff; background: #FF0000;font-size: 10px; position: absolute;top: -2px;right: -2px;'>" + unread + "</em>");
                                   }

                               }
                });
            } catch (e) {
                console.log(e.message);
            }

        }
    });

    //支付交易保障金
    function payDeposit() {
        var currentDeposit = $("#hidDeposit").val();
        if (currentDeposit <= 0) {
            window.location.href = "/WxPay/Index?payReturnUrl=/Account/Index";
        }
    }

    function myAccount() {
        window.location.href = "/Account/MyAccount";
    }

</script>