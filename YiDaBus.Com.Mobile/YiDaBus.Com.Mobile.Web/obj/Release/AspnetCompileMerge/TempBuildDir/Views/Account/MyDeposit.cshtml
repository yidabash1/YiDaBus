    {{#  }else{ }}
    <div class="search_listheader" style="background:#fff;position:relative;">
        <div class="search_listheader_l" onclick="window.location.href = '/Account/Index'"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2> 我的交易保障金</h2>
        <div class="search_listheader_r" style="width:80px"><a href="/Account/DepositDetail">明细</a></div>
    </div>
    <div class="myyajin">
        <dl class="myyajin_cont">
            <dt>{{d.deposit.toFixed(2)}}</dt>
            <dd>交易保障金金额（元）</dd>
        </dl>
    </div>
    <div class="login_btm" style="padding-top:25px;">
        <a class="login_btn bgred" href="javascript:void(0);" style="border-radius:2px; margin-left:15px; margin-right:15px; width:auto" onclick="$.GoToPayHandler();">去充值</a>
    </div>
    {{#  } }}
    {{#  } }}
</script>
<script>
    var Fuc = {
        Init: function () {
            $('body').removeClass('bg01');
            $.LayDetails({
                elem: '.container'
              , Template: '#DepositTemplate'
              , mb: 100
              , url: globalKey.InterfaceDomain + '/api/Users/CheUIsDepositAndGetUserInfo'
              , type: 'post'
              , data: { userId: $("#Uid").val() }
              , success: function (html, data) {
                  $('.container').html(html);
                  if (data.isDeposit) {
                      Fuc.Js();
                  }
              }
            });
        },
        Js: function () {
            $(".shenqing_yjtk").click(function () {
                $(".overlay").show();
                $(".tyajing_tc").slideDown();

            });
            $(".kanfang_tc_btn.bg1").click(function () {
                $(".overlay").hide();
                $(this).parent().parent().slideUp();

            });
            $(".overlay").click(function () {
                $(this).hide();
                $(".tyajing_tc").slideUp();
            });
            $("#rdeposit").click(function () {
                $.ar({
                    url: globalKey.InterfaceDomain + 'api/Users/AddReturnDeposit'
                    , data: { userId: $('#Uid').val() }
                    , success: function (data) {
                        window.location.href = "/Account/DRefundSuc?deposit=" + data.data.deposit;
                    }
                });
            });
        },
        //退还交易保障金
        ReturnDepositHandler: function () {
            
            
        }
    }
    $(function () {
       
        Fuc.Init();
    })
</script>
