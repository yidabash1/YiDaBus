
@{
    ViewBag.Title = "帮助中心";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="search_listheader" style="background:#fff;">
        <div class="search_listheader_l" onclick="window.location.href = '/Account/Index'"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2> 帮助中心</h2>
    </div>

    <div class="contact" style="padding-top: 45px;">
        <div class="contact_box" style="margin-top:0">
            <ul></ul>
        </div>
    </div>

    @*<div class="btmline"></div>
        <a class="fankui_btn" href="/Account/FeedbackAdd"><i class="iconfont icon-iconset0137"></i>我要反馈</a>*@

</div>
<script>
    $(function () {
        $.ar({
            url: globalKey.InterfaceDomain + 'api/users/GetHelpInfoList'
            , data: { PageIndex: 1 }
            , success: function (data) {
                var html = '';
                for (var i = 0; i < data.data.items.length; i++) {
                    html += '<a class="telbtn" href="/account/feedbackdetail/' + data.data.items[i].id + '"><li><span>' + data.data.items[i].helpTitle + '</span><em><i class="icon iconfont icon-jikediancanicon13"></i></em></li></a>';
                }
                $('.contact_box ul').append(html);
            }
        });
    });

    function ShowDetail(id) {
        var div_detail = $('#details_' + id);
        var html = '<div class="div_show_title"><header class="div_show_font" style="line-height: 40px;background: #333333;">' + div_detail.attr('data-title') + ' </header> <a onclick="close_show();" class="div_show_btn" style="position: absolute;top: 12px;right: 20px;color: #fff;"><i class="icon iconfont icon-guanbi"></i></a> </div>';
        $.modalPage({ html: html + '<div style="overflow: auto;height:' + (window.screen.height - 100) + 'px;padding:10px;">' + div_detail.html() + '</div>', background_color: '#f5f5f5' });
    }
    function close_show() {
        $.modalCloseALL();
    }
</script>




