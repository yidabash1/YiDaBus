
@{
    ViewBag.Title = "新增反馈";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" style="padding-top: 40px;">
    <div class="search_listheader" style="background:#fff">
        <div class="search_listheader_l" onclick="window.location.href = '/Account/Index'"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2> 我的投诉</h2>
    </div>
    <div class="complaint_content nopadding">
        <textarea placeholder="投诉内容"></textarea>
    </div>
    <div class="complaint_btn" onclick="addfeedback()"><a>提交</a></div>
</div>
<div class="complaint_tel"><a href="tel:02165987278">投诉热线：021-65987278</a></div>
<script>

    function addfeedback() {
        if ('@Request.IsAuthenticated'=='False') {
            $.modalAlert("您未登陆，请登陆后反馈！")
            window.location.href = "/home/login?returnurl=account/feedbackadd";
            return;
        }
        var FeedbackContent = $(".complaint_content textarea").val();
        if (!FeedbackContent) {
            $.modalAlert("请填写反馈内容！")
            $(".complaint_content textarea").focus();
            return;
        }

        $.modalConfirm({
            content: '确认提交？'
                  , callBack: function () {
                      $.ar({
                          url: globalKey.InterfaceDomain + 'api/users/AddFeedback'
                          ,type:'post'
                         , data: { FeedbackContent: FeedbackContent, UserID: $("#Uid").val()}
                         , success: function (data) {
                             if (data.code == 200) {
                                 window.location.href = "/Account/FeedbackAddResult";
                             }
                             else {
                                 $.modalAlert("反馈失败，请重试！")
                             }
                         }
                      });
                      return false;
                  }
        });
    }
</script>