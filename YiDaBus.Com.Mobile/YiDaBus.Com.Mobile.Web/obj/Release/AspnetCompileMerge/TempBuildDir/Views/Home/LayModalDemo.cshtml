
@{
    ViewBag.Title = "LayModalDemo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<fieldset class="layui-elem-field site-demo-button">
    <div>
        <button class="layui-btn layui-btn-primary" onclick="$.modalMsg({ content: 'CN DOTA', title: '提示' })">信息框</button>
    </div>
    <div>
        <button class="layui-btn" onclick="$.modalAlert('CN DOTA')">提示</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-normal" onclick="$.modalConfirm({ content: '确定要删除该条信息吗？', callBack: function () { $.modalAlert('已删除') } })">确认框</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm" onclick="$.BottomDialog({ content: '确定要删除该条信息吗？', callBack: function () { $.modalAlert('已删除') } })">底部对话框</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-danger" onclick="$.BottomMsg({ content: 'CN DOTA' })">底部提示</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm" onclick="$.modalPage({ html: demo5a.value })">页面层</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-radius" onclick="$.modalLoad({ content: '' })">loading层</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm" onclick="$.modalLoad()">loading带文字</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm" onclick="GetNews()">请求数据</button>
    </div>
    <div>
        <button class="layui-btn layui-btn-warm" onclick="ShowLoad()">加载</button>
    </div>
    <div class="ui-loader ui-corner-all ui-body-a ui-loader-default"><span class="ui-icon-loading"></span><h1>加载中</h1></div>
</fieldset>
<textarea id="demo5a" style="display:none;">
    <div>请先登录</div>
    <button class="layui-btn layui-btn-warm" onclick="$.modalCloseALL(); $.modalAlert({ content: '登录成功' });">登录</button>
</textarea>
<script>
    function GetNews() {
        var defaults = {
            title: 'ss',
            content: 'sss',
            btn: '确认',
            success: null
        };
        var options = $.extend(defaults, options);
        var index = mlayer.open({
            title: options.title == "" ? "" : [options.title, 'background-color: #eee;'],
            content: options.content
          , btn: options.btn
          , yes : function () {
              alert('ss');
          }
        });
    }
</script>
