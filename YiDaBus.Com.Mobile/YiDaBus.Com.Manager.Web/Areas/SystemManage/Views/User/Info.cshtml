<script>
    $(function () {
        $('.wrapper').height($(window).height() - 11);

    })
    ///更新密码
    function btn_updatePwd() {
        var newPwd1 = $('#newPwd1').val();
        var newPwd2 = $('#newPwd2').val();
        if (newPwd1 == '') {
            return $.modalMsg("请输入新密码！", 0);
        }
        if (newPwd2 == '') {
            return $.modalMsg("请再次输入新密码！", 0);
        }
        if (newPwd2 != newPwd1) {
            return $.modalMsg("密码不一样！", 0);
        }
        $.submitForm({
            url: "/SystemManage/User/SubmitCurPassword",
            param: { userPassword: newPwd1 },
            success: function () {
                $.currentWindow().$("#gridList").trigger("reloadGrid");
            }
        })
    }
</script>
