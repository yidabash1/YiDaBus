<script id="DepositDetailTemplate" type="text/html">
    {{# layui.each(d, function(index, item){ }}
    <dl>
        <dt>
            <h3>
                {{item.remark}}
            </h3>
            <p>{{item.addTime}}</p>
        </dt>
        <dd>
            {{# if(item.type==0){ }}
            <em style="color:#1eb700;">+￥{{item.amount}}</em>
            {{# } }}
            {{# if(item.type==2||item.type==1){ }}
            <em>-￥{{item.amount}}</em>
            {{# } }}
            <span>{{item.platform}}</span>
        </dd>
    </dl>
    {{#  });}}
</script>
<script>
    $(function () {
        Fuc.Init();
    });
    var Fuc = {
        Init: function () {
            $.LayPage({
                elem: '.tuikuan_mx'
                , Template: '#DepositDetailTemplate'
                , mb: 100
                , url: globalKey.InterfaceDomain + 'api/users/GetDepositList'
                , type: 'post'
                , data: { userId: $("#Uid").val() }//参数
                , isalert: false
                , load: false
                , NullColor: '#fff'
            });
        }
    };
</script>