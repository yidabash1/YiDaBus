<script>
    $(function () {
        $('#footer>ul>li:eq(' + $('#indextab').val() + ')').addClass('cur').siblings('li').removeClass('cur');
        //使用ajax获取订单的数量
        if (Boolean($('#IsLogin').val() == "True")) {
            //已登录
            $.ar({
                url: globalKey.InterfaceDomain + 'api/Users/GetUserOrderCount',
                data: { userId: $('#Uid').val() },
                load: false,
                success: function (data) {
                    if (data.data.orderCount > 0) {
                        //存在显示个数
                        $('#orderA').append('<em>' + data.data.orderCount + '</em>');
                    } 
                }
            })
        } else {
            //未登录
        }
    });
</script>