
@{
    ViewBag.Title = "小区出租记录";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="box_main">
        <div class="search_listheader" style="background:#fff">
            <div class="search_listheader_l"><i class="iconfont icon-jiantou-copy1" onclick="return history.go(-1)"></i></div>
            <h2>成交记录</h2>
        </div>
        <div class="rentlist">
        </div>
    </div>
</div>
<script type="text/html" id="results" >
    {{#  layui.each(d, function(index, item){ }}
    <dl>
        <dt>
            <div class="rentlist_about">
                <span><b>{{item.hRoom}}室{{item.hOffice}}厅</b></span>|<span>{{item.rentalArea}}㎡</span>|<span>{{item.hFloor}}/{{item.hFloorTotal}}层</span>
            </div>
            <em><b>￥{{item.hRent}}</b>/月</em>
        </dt>
        <dd>
            <div class="rentlist_tag">
                {{# if(item.hTags!=""){ }}
                {{# layui.each(item.hTags.split(','),function(index,itemdetails){}}
                <a href="javasctipt:;">{{itemdetails}}</a>
                {{#  });}}
                {{# } }}
               
            </div>
            <em>成交时间：{{item.lastUpdateTime}}</em>
        </dd>
    </dl>
    {{#   }) }}
</script>



<script>
    function loadresult() {
        var data = {
            pagesize: 10,
            HouseVillageId: '@ViewBag.Id',
            HStatus: 1
        };
        $.LayPage({
            elem: '.rentlist'
      , Template: '#results'
      , mb: 100
      , url: globalKey.InterfaceDomain + 'api/House/GetList'
      , type: 'post'
      , data: data//参数
        });
    };
    loadresult();
</script>
