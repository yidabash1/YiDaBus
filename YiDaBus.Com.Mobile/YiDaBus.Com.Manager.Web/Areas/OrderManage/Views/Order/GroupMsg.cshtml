            <tr>
                <th class="formTitle" valign="top" style="padding-top: 5px;">
                    消息模板
                </th>
                <td class="formValue" colspan="3">
                    <textarea id="MsgTemplate" name="MsgTemplate" class="form-control required" style="height: 300px;"></textarea>
                </td>
