
@{
    ViewBag.Title = "我的账户";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="search_listheader" style="background:#fff" >
        <div class="search_listheader_l" onclick="window.location.href = '/Account/Index'"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2> 我的账户</h2>
    </div>
    <div class="contact" style="padding-top: 45px;">
        <div class="contact_box" style="margin-top:0">
            <ul>
                <a class="telbtn" href="javascript:void(0);" onclick='window.location.href = "MyAccountEdit?type=name&uname=" + $("#hidName").val()'>
                    <li><span> 姓&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名</span><em><b style="color:#333333" id="uname"> </b><i class="icon iconfont icon-jikediancanicon13"></i></em></li>
                </a>
                <a class="telbtn" href="javascript:void(0);"  onclick='window.location.href ="MyAccountEdit?type=gender&ugender="+ $("#hidGender").val()'>
                    <li><span> 性&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;别</span><em><b style="color:#333333" id="ugender"> </b><i class="icon iconfont icon-jikediancanicon13"></i></em></li>
                </a>
                <a class="telbtn" href="javascript:void(0);">
                    <li><span> 手机号码</span><em><b style="color:#333333" id="logaccount"></b></em></li>
                </a>
            </ul>
        </div>
        <div class="contact_box">
            <ul id="btnQuit" style="text-align:center;">
                <a class="telbtn" href="javascript:void(0);">
                    <li>退出登录</li>
                </a>
            </ul>
        </div>
    </div>
    <input type="hidden" id="hidName" />
    <input type="hidden" id="hidGender" />
</div>

<script type="text/javascript">
    $(function () {
        if (CheckUserLog()) {
            //加载用户相关数据
            try {
                $.ar({
                    url: globalKey.InterfaceDomain + 'api/Users/GetUserInfo?userId=' + $('#Uid').val()
                               , data: { userId: $('#Uid').val() }
                               , success: function (data) {
                                   $("#uname").html(data.data.userRealName);
                                   $("#ugender").html(data.data.userGender);
                                   $("#logaccount").html(data.data.logAccount);
                                   $("#hidName").val(data.data.userRealName);
                                   $("#hidGender").val(data.data.userGender);
                                   
                               }
                });
            } catch (e) {
                console.log(e.message);
            }
        }
    })

    
    $(document).ready(function () {
      
        //退出登录
        $("#btnQuit").click(function () {
            $.BottomDialog({
                content: '您确认要登出吗?'
                         , callBack: function () {
                             $.ar({
                                 url: 'Logout'
                                , success: function () {
                                    window.location.href = "/home/index";
                                }
                             });
                             return false;
                         }
            });
        });
    });

    //修改个人信息
    function AccountEdit() {
        window.location.href = "account/MyAccountEdit";
    }

</script>
