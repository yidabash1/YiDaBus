        mlayer.open({
            content: "<div class=\"div_show_title\"> <span class=\"div_show_font\">优惠券使用说明</span> <a onclick=\"close_show();\" class=\"div_show_btn\" ><i class=\"icon iconfont icon-guanbi\"></i></a> </div>" + $("#div_show").html()
      , type: 1
     , style: 'position:fixed; left:0; top:0; width:100%; height:100%; border: none; -webkit-animation-duration: .5s; animation-duration: .5s;'
        });
    }
    function close_show() {
        $("#div_show").hide();
        var div_show = document.getElementById("div_show");
        div_show.style.zIndex = "-100";
        $.modalCloseALL();
    }
    function myfunction() {
        var timestamp = new Date().getTime().toString();
        var cipherwx = strEnc(mobile, timestamp);
        var murl = "https://m.licai.51duoying.com/";
        $.ajax({
            url: murl + "index/getcode/v1",
            data: { "mobile": mobile, "ts": timestamp, "imageCode": imageCode },
            type: "post",
            dateType: 'json',
            beforeSend: function (xhr) { xhr.setRequestHeader('cipherwx', cipherwx); },
            cache: false,
            async: false,
            success: function (result) {
                closeLoading();
                if (result.success) {
                    msg_code_show();
                } else {
