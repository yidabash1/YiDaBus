@{
    ViewBag.Title = "Form";
    Layout = "~/Views/Shared/_Form.cshtml";
}
<script>
    var modulelUrl = "/OrderManage/Order/";//区域的路径
    var ids = $.request("Ids");
    $(function () {
        initControl();
    });
    function initControl() {

    }
    function submitForm() {
        if (!$('#form1').formValid()) {
            return false;
        }
        $.modalConfirm('您确认要发送消息吗？', function (r) {
            if (r) {
                debugger;
                var postdata = $("#form1").formSerialize();
                postdata["ids"] = ids;
                $.submitForm({
                    url: modulelUrl + "SendMsg",
                    param: postdata,
                    success: function () {
                        $.currentWindow().$("#gridList").trigger("reloadGrid");
                    }
                })
            }
        });
    }
   
   

    function Close() {
        $.modalClose();
    }
</script>
<form id="form1">
    <div style="padding: 20px; margin-right: 20px;">
        <table class="form">
