@{
    ViewBag.Title = "支付失败";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="search_listheader" style="background:#fff">
        <div class="search_listheader_l" onclick="return history.go(-1);"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2> 支付</h2>
    </div>

    <div class="fankui_null">
        <dl>
            <dt><img width="80" src="/Content/img/shibai_icon.png"></dt>
            <dd>
                <h3>支付失败,请重新支付</h3>
            </dd>
        </dl>
        <div class="login_btm" style="padding-top:25px;">
            <a class="login_btn bgred" href="javascript:void(0);" onclick="ReturnHandler();" style="border-radius:2px; margin-left:15px; margin-right:15px; width:auto">重新支付</a>
        </div>
    </div>
</div>
<script>
    $(function() {
        $('body').removeClass('bg01');
    });

    function ReturnHandler() {
        window.location.href = "/WxPay/Index?payReturnUrl=" + encodeURIComponent($.request('payReturnUrl'));
    }
</script>