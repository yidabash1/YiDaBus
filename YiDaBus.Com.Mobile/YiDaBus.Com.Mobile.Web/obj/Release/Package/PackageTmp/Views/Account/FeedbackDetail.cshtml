
@{
    ViewBag.Title = "帮助反馈详情";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
   li{list-style:disc!important;}
</style>
<div class="container">
    <div class="search_listheader" style="background:#fff">
        <div class="search_listheader_l" onclick="window.location.href = '/Account/Feedback'"><i class="iconfont icon-jiantou-copy1"></i></div>
        <h2 id="title"> </h2>
    </div>

    <div class="help_con" style="padding-top: 45px;">

    </div>
</div>
<script type="text/html" id="contentDetails">
    {{# if(d!=null){ console.log(d); }}
    {{# document.title=d.items[0].helpTitle; $("#title").html(d.items[0].helpTitle); }}
    <div>
        {{ d.items[0].helpContent}}
    </div>
    {{#   } }}
</script>
<script>
    //load data
    function details() {
        $.LayDetails({
            elem: '.help_con'
      , Template: '#contentDetails'
      , mb: 100
      , url: globalKey.InterfaceDomain + 'api/users/GetHelpInfoList'
      , type: 'post'
      , data: { id: '@ViewBag.Id', PageIndex: 1 }//参数
      , success: function (html) {
          $('.help_con').html(html);

      }
        });
    }
    $(function () {
        details();
    });
</script>
